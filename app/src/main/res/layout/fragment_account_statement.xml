<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_offer"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Statement"
            android:fontFamily="@font/roboto_light"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:textColor="@color/dark_red"
                android:textStyle="bold"
                android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Active Plan"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/latestactivePlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="Example"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Bill Generated On"
                android:textStyle="bold"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/latestbillgenerateOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="Example"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Transaction ID"
                android:textStyle="bold"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/latestTransactionId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Payment Type"
                android:textStyle="bold"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/latestPaymentType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Paid Amount"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/billFor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/billDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email Bill"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_light"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:id="@+id/email_bill"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:background="@drawable/button"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>