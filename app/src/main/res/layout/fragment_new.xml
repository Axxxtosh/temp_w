<LinearLayout android:id="@+id/broadband_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/progress_bar" />

    <TextView
        android:id="@+id/error"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:minLines="2"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="You have no active cable plans" />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:weightSum="15.2">

        <!-- 1.Usage ring-->
        <LinearLayout
            android:id="@+id/dataLayout"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/ring"
                    android:layout_height="@dimen/ring"
                    android:background="@drawable/solid_circle"
                    android:orientation="vertical">

                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.hookedonplay.decoviewlib.DecoView
                            android:id="@+id/dynamicArcView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp">


                        </com.hookedonplay.decoviewlib.DecoView>

                        <LinearLayout


                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/dataUsed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_light"
                                android:gravity="center"
                                android:minLines="2"
                                android:text="31 Days"
                                android:textColor="#ff1744"
                                android:textSize="@dimen/days"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </FrameLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/daysRemaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:text="21 Days Remaining for Next Bill"
                        android:textColor="#ffebee"
                        android:textSize="@dimen/btn_text" />

                    <TextView
                        android:id="@+id/due_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Due Date : 20/11/2017"
                        android:textColor="#fff59d"
                        android:textSize="@dimen/btn_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--3.Button Renew-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="4.6"
            android:gravity="center">

            <Button
                android:id="@+id/renewBroadbandplan"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_renew"
                android:fontFamily="@font/roboto_light"
                android:textAllCaps="false"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="@dimen/btn_text"
                android:text="Renew Pack"
                android:textColor="@color/white" />

        </LinearLayout>


        <!--2.Plan details-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


                <!--android:background="#4CFF0000"-->
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center"
                        android:text="Plan Name"
                        android:textColor="#fafafa"
                        android:textSize="@dimen/text1" />

                    <TextView
                        android:id="@+id/planname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center"

                        android:text="100 Mbps Speed 300 GB FUP 2 Mbps"
                        android:textColor="#fafafa"
                        android:textSize="@dimen/days"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#ff1744" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Price"
                            android:textColor="#fafafa"
                            android:textSize="@dimen/btn_text" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Rs. 6500 "
                            android:textColor="#fafafa"
                            android:textSize="@dimen/btn_text" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="#ff1744" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Provider"
                            android:textColor="#fafafa"
                            android:textSize="@dimen/btn_text" />

                        <TextView
                            android:id="@+id/provider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:padding="3dp"
                            android:text="Metro Net Network"
                            android:textColor="#fafafa"
                            android:textSize="@dimen/btn_text" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="#ff1744" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Validity"
                            android:textColor="#fafafa"
                            android:textSize="@dimen/btn_text" />

                        <TextView
                            android:id="@+id/validity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:padding="3dp"
                            android:text="6 months"
                            android:textColor="#fafafa"
                            android:textSize="@dimen/btn_text" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <!--1.//change buton-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="4.4"
            android:gravity="center">

            <Button
                android:id="@+id/recommendedPlans"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="@dimen/btn_text"
                android:background="@drawable/btn_renew"
                android:fontFamily="@font/roboto_light"
                android:text="Change Plan"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>



