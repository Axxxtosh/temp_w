<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.worldvisioncable.ActiveBroadbandFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"

        android:foregroundTint="@color/grey"

        android:background="@color/grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:background="@drawable/solid_circle">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.hookedonplay.decoviewlib.DecoView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/dynamicArcView"
                            android:layout_margin="8dp">


                        </com.hookedonplay.decoviewlib.DecoView>

                        <LinearLayout

                            android:id="@+id/dataLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/dataUsed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minLines="2"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_light"
                                android:text="31 Days"
                                android:textColor="#ff1744"
                                android:textSize="30dp"
                                android:gravity="center" />


                        </LinearLayout>

                    </FrameLayout>


                    <!-- <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Data"

                         android:textSize="20dp"
                         android:layout_marginTop="20dp"
                         android:gravity="center"/>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="6.25"
                         android:textColor="@color/dark_red"
                         android:textSize="35dp"


                         android:gravity="center"/>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="of 20GB left"

                         android:textSize="17dp"
                         android:gravity="center"/>-->
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/daysRemaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="21 Days Remaining for Next Bill"
                        android:textColor="#f44336"
                        android:textSize="17dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/due_date"
                        android:textColor="#fff59d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Due Date : 20/11/2017"
                        android:textSize="17dp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="5">

                <Button
                    android:id="@+id/renewBroadbandplan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_light"
                    android:text="Renew Pack"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="#8BC34A" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="5">

                <Button
                    android:id="@+id/recommendedPlans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Change Plan"
                    android:fontFamily="@font/roboto_light"

                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="#7C4DFF" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plan Name"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_light"
                        android:textSize="18sp"
                        android:textColor="#fafafa"
                        android:padding="3dp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/planname"
                        android:textColor="#fafafa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="100 Mbps Speed 300 GB FUP 2 Mbps"
                        tools:ignore="HardcodedText"
                        android:textSize="30sp"
                        android:padding="3dp"
                        android:gravity="center" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#ff1744" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fafafa"
                            android:fontFamily="@font/roboto_light"
                            android:text="Price"
                            android:textSize="20dp"
                            android:padding="3dp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fafafa"
                            android:text="Rs. 6500 "
                            android:textSize="16dp"
                            android:padding="3dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="#ff1744" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fafafa"
                            android:text="Provider"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="20dp"
                            android:padding="3dp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/provider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fafafa"

                            android:text="Metro Net Network"
                            android:textSize="16dp"
                            android:padding="3dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="#ff1744" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fafafa"
                            android:text="Validity"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="20dp"
                            android:padding="3dp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/validity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fafafa"

                            android:text="6 months"
                            android:textSize="16dp"
                            android:padding="3dp"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
