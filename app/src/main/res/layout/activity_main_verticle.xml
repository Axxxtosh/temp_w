<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_verticle"
    android:background="@drawable/grad_tool"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="7">

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:layout_marginLeft="8dp"
            android:src="@drawable/logo_plain"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="World Vision Cable"
            android:layout_weight="0.8"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:textSize="30sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/hathway"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="#ab47bc"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="@drawable/card_foreground"
                    android:elevation="4dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:src="@drawable/i_wifi" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/main_button_text"
                            android:fontFamily="@font/roboto_light"
                            android:text="Internet Packs"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal|bottom"
                            />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/cabletv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="#8bc34a"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="@drawable/card_foreground"
                    android:elevation="4dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/i_tv" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity=""
                            android:textSize="@dimen/main_button_text"
                            android:fontFamily="@font/roboto_light"
                            android:text="Cable TV Packs"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/newConnection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                app:cardBackgroundColor="#0082c8"
                android:foreground="@drawable/card_foreground"
                android:elevation="4dp">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icc_connection"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/main_button_text"
                        android:minLines="2"
                        android:padding="10dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="New Connection"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <Button
                android:id="@+id/view_plans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:fontFamily="@font/roboto_light"
                android:text="View Offers"
                android:textSize="@dimen/main_button_text"
                android:elevation="4dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/custom_shape"
                />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:weightSum="2"
        android:orientation="horizontal"
        >


            <android.support.v7.widget.CardView
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="40dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#ff9800"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="@drawable/card_foreground"
                android:elevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:tint="@color/white"
                        android:src="@drawable/icc_contact"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/main_button_text"
                        android:fontFamily="@font/roboto_light"
                        android:text="Contact Us"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="#26a69a"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/card_foreground"
                android:elevation="4dp">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:tint="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icc_login"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/main_button_text"
                        android:text="Login"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>




</LinearLayout>