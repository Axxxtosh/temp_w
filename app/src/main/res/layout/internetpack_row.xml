<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/grey"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/planname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="1 MBPS 30GB FUP 256 Kbps (validity 30 days) "/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="6.5"
                    android:weightSum="10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="horizontal">
                            <!--<ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/icon"/>-->
                            <TextView
                                android:id="@+id/txtSpeed"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="10dp"
                                android:textSize="13dp"
                                android:text="Speed : 10 Mbps"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="horizontal">
                            <!--<ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/icon"/>-->
                            <TextView
                                android:id="@+id/txtFUP"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textSize="13dp"
                                android:layout_marginLeft="10dp"
                                android:text="After FUP: 1 Mbps"/>

                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:weightSum="10"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="horizontal">
                            <!--<ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/icon"/>-->
                            <TextView
                                android:id="@+id/txtDataTransfer"
                                android:layout_width="match_parent"
                                android:textColor="@color/white"
                                android:layout_height="30dp"
                                android:textSize="13dp"
                                android:layout_marginLeft="10dp"
                                android:text="Data Transfer : 80 GB"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="horizontal">
                            <!--<ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/icon"/>-->
                            <TextView
                                android:id="@+id/txtValidity"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textColor="@color/white"
                                android:textSize="13dp"
                                android:layout_marginLeft="10dp"
                                android:text="Validity : 30 Days"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="5">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TARRIF         :"
                                android:textSize="13dp"
                                android:gravity="right"
                                android:textColor="@color/white" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GST (18%)   :"
                                android:textSize="13dp"
                                android:gravity="right"
                                android:textColor="@color/white" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="5">
                            <TextView
                                android:id="@+id/txtTarrifAmt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rs. 699"
                                android:textSize="13dp"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/txtGSTAmt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rs. 129"
                                android:textSize="13dp"

                                android:textColor="@color/white" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:layout_marginTop="3dp"
                        android:weightSum="10"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="5">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TOTAL          :"
                                    android:textSize="13dp"
                                    android:gravity="right"
                                    android:textColor="@color/spots_dialog_color" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="5">
                                <TextView
                                    android:id="@+id/txtTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Rs. 825"
                                    android:textSize="13dp"
                                    android:textColor="@color/spots_dialog_color" />

                            </LinearLayout>
                        </LinearLayout>
                      <!--  <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4">

                            <Button
                                android:id="@+id/btnRecharge"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorAccent"
                                android:text="Recharge"
                                android:layout_marginBottom="9dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/white"/>
                        </LinearLayout>-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>