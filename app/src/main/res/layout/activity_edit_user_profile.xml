<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uriah.admin.worldvisioncable.ChangePlan.ActiveCableTVChangeActivity">

    <include layout="@layout/progress_bar" />
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_cable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:titleTextColor="@color/white"
            android:background="@color/spots_dialog_color">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad_tool"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_user_edit_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="8dp"

            android:gravity="center_vertical"
            android:hint="Enter UserName"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white_greyish" />

        <EditText
            android:id="@+id/et_user_edit_mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="8dp"

            android:gravity="center_vertical"
            android:hint="Enter UserName"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white_greyish" />

        <EditText
            android:id="@+id/et_user_edit_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/email1"
            android:drawablePadding="8dp"

            android:gravity="center_vertical"
            android:hint="Enter UserName"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white_greyish" />

        <EditText
            android:id="@+id/et_user_edit_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="8dp"

            android:gravity="center_vertical"
            android:hint="Enter UserName"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white_greyish" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/editProfile_changePassword"
            android:layout_marginTop="20dp"
            android:textColor="@color/spots_dialog_color"
            android:textSize="15dp"
            android:background="@android:color/transparent"
            android:text="Change Password?"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Update"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_user_edit_save"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_renew" />
    </LinearLayout>


</LinearLayout>

